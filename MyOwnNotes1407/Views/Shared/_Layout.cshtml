                                <a class="nav-link text-dark" asp-area="" asp-controller="Note" asp-action="NotePaginSort">Опис та Пошук</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Note" asp-action="AddNote">Створити нотатку</a>
                            </li>                  
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Inventory" asp-action="GetAll">Inventory</a>
                            </li>
                        }*@


                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
 

     @if (User.Identity.IsAuthenticated)
      {
                <div class="sidenav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Note" asp-action="NoteShowEdit">Мої нотатки</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Note" asp-action="NotePaginSort">Опис та Пошук</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Note" asp-action="AddNote">Створити нотатку</a>
                    </li>
                </div>
                <div class="main">
                </div>
       }
        
       @if (User.IsInRole("Admin"))
        {
        <div class="sidenav">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Note" asp-action="NoteShowEdit">Мої нотатки</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Note" asp-action="NotePaginSort">Опис та Пошук</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Note" asp-action="AddNote">Створити нотатку</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Inventory" asp-action="GetAll">Inventory</a>
            </li>
            </div>
            <div class="main">
            </div>
        }

            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
         

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - MyNotes2023 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
